@model FlowerShop.Models.Bouquet

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Bouquet</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BouquetName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BouquetName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>

    <table class="table">
        <tr>
            <th>
                Flower Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price for each
            </th>
        </tr>

        @foreach (var item in Model.FlowerBouquets)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Flower.FlowerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Flower.Price)
                </td>
            </tr>
        }
    </table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BouquetID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
